    "#### 4) Implement YOLOv4 object detection in tandem with OpenCV.\n",
    "- Creates an \"alert zone\" wherein any vehicle that enters is flagged as being an object of interest.\n",
    "- Approximates the distance between oncoming vehicle and camera.\n",
    "- Approximates the speed of oncoming vehicle."
    "- Alerts if vehicle is in region and has a high speed in relation to user's vehicle.
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "fceb938d",
   "metadata": {},
   "outputs": [],
   "source": [
    "mixer.init()\n",
    "tracker = EuclideanDistTracker()\n",
    "\n",
    "net = cv2.dnn.readNet(r\"C:\\Users\\rsand\\Downloads\\yolov4-tiny.weights\", r\"C:\\Users\\rsand\\Downloads\\yolov4-tiny.cfg\")\n",
    "sound = mixer.Sound(r\"C:\\Users\\rsand\\Downloads\\alarm.wav\")\n",
    "\n",
    "classes = []\n",
    "with open(r\"C:\\Users\\rsand\\Downloads\\coco.names\", \"r\") as f:\n",
    "    classes = f.read().splitlines()\n",
    "    \n",
    "cap = cv2.VideoCapture(1) # Captures a live feed of secondary webcam\n",
    "font = cv2.FONT_HERSHEY_PLAIN\n",
    "colors = np.random.uniform(0, 255, size=(100, 3))\n",
    "\n",
    "distanceDictionary = {}\n",
    "\n",
    "FPS = 30 \n",
    "interval = 1/FPS # Time between each frame of footage\n",
    "toleranceSpeed = -10\n",
    "\n",
    "while True:\n",
    "    ret, img = cap.read()\n",
    "    if not ret:\n",
    "        break\n",
    "        \n",
    "    height, width, _ = img.shape\n",
    "\n",
    "    # Runs YOLOv4 on the frame and creates a list of detected objects and their bounding boxes\n",
    "    blob = cv2.dnn.blobFromImage(img, 1/255, (416, 416), (0,0,0), swapRB=True, crop=False)\n",
    "    net.setInput(blob)\n",
    "    output_layers_names = net.getUnconnectedOutLayersNames()\n",
    "    layerOutputs = net.forward(output_layers_names)\n",
    "\n",
    "    boxes = []\n",
    "    confidences = []\n",
    "    class_ids = []\n",
    "    \n",
    "    # Gets the confidence levels for each detected object and if confidence > 0.3, appends object attirbutes to respective lists\n",
    "    for output in layerOutputs:\n",
    "        for detection in output:\n",
    "            scores = detection[5:]\n",
    "            class_id = np.argmax(scores)\n",
    "            confidence = scores[class_id]\n",
    "            if confidence > 0.3:\n",
    "                center_x = int(detection[0]*width)\n",
    "                center_y = int(detection[1]*height)\n",
    "                w = int(detection[2]*width)\n",
    "                h = int(detection[3]*height)\n",
    "\n",
    "                x = int(center_x - w/2)\n",
    "                y = int(center_y - h/2)\n",
    "\n",
    "                boxes.append([x, y, w, h])\n",
    "                confidences.append((float(confidence)))\n",
    "                class_ids.append(class_id)\n",
    "    \n",
    "    # Eliminates overlapping detections and returns a list of indexes of the remaining detections\n",
    "    indexes = cv2.dnn.NMSBoxes(boxes, confidences, 0.2, 0.4)\n",
    "    \n",
    "    # Creating the \"alert zone\" - varies depending on the position/angle of camera\n",
    "    area_1 = np.array([(420, 673), (874, 673), (727, 495), (670, 495)])\n",
    "    cv2.polylines(img, [area_1], True, (15, 220, 10), 3)\n",
    "    \n",
    "    boxes_ids = tracker.update(boxes)\n",
    "    \n",
    "    if len(indexes) > 0:\n",
    "        for i in indexes.flatten():\n",
    "            x, y, w, h = boxes[i] # Dimensions of bounding box\n",
    "            label = str(classes[class_ids[i]])\n",
    "            confidence = str(round(confidences[i],2))\n",
    "            color = colors[i]\n",
    "        \n",
    "            # Average width of actual vehicles in feet\n",
    "            if label == \"car\":\n",
    "                realObjectWidth = 5.8 \n",
    "            elif label == \"bus\":\n",
    "                realObjectWidth = 8\n",
    "            elif label == \"truck\":\n",
    "                realObjectWidth = 8.5\n",
    "            elif label == \"motorbike\":\n",
    "                realObjectWidth = 2.5\n",
    "                \n",
    "            # If object is actually desired\n",
    "            if label == \"car\" or label == \"bus\" or label == \"truck\" or label == \"motorbike\": \n",
    "                box_id = boxes_ids[i][4]\n",
    "                totalDistance = 0\n",
    "                totalTime = 0\n",
    "\n",
    "                bottom_x = int(x + (w/2))\n",
    "                bottom_y = int(y + h)\n",
    "                cx = bottom_x\n",
    "                cy = int(y + (h/2))\n",
    "                result = cv2.pointPolygonTest(area_1, (bottom_x, bottom_y), True)\n",
    "                \n",
    "                # If vehicle in aforementioned alert zone\n",
    "                if result >= 0: \n",
    "                    pixelWidth = w\n",
    "                    pixelDistance = height - (height - cy)\n",
    "                    realDistance = (pixelDistance * realObjectWidth)/pixelWidth # Converts pixel distance to real distance \n",
    "                    realDistance = round(realDistance, 2) \n",
    "                    \n",
    "                    # Adds distance to the corresponding box id in a dictionary\n",
    "                    if box_id not in distanceDictionary: \n",
    "                        distanceDictionary[box_id] = [[realDistance]]\n",
    "                    else:\n",
    "                        distanceDictionary[box_id].append([realDistance])\n",
    "\n",
    "                    if len(distanceDictionary[box_id]) >= 2: \n",
    "                        currentDistance = distanceDictionary[box_id][-1][0] \n",
    "                        previousDistance = distanceDictionary[box_id][-2][0] \n",
    "\n",
    "                        myDistance = ((mySpeed * interval)/3600) * 5280 # Distance that user's car travels after a frame\n",
    "\n",
    "                        currentDistance2 = currentDistance - myDistance\n",
    "                        speed = abs((previousDistance - currentDistance2)/interval)\n",
    "                        speed /= 1.467 # Converts ft/s to mph\n",
    "                        speed = round(speed, 2) # Speed of the trailing car\n",
    "\n",
    "                        relSpeed = mySpeed - speed\n",
    "                        \n",
    "                        # Alert if trailing vehicle is 10mph faster than user\n",
    "                        if relSpeed < toleranceSpeed: \n",
    "                            sound.play()\n",
    "\n",
    "                        # Displays graphics onto the frame\n",
    "                        cv2.rectangle(img, (x,y), (x+w, y+h), color, 2)\n",
    "                        cv2.circle(img, (bottom_x, bottom_y), 5, color, -1)\n",
    "                        cv2.circle(img, (cx, cy), 5, color, -1)\n",
    "                        cv2.putText(img, label + \" \" + str(realDistance) + \" \" + str(speed), (x, y+20), font, 2, (255,255,255), 2)\n",
    "    \n",
    "    cv2.imshow('Image', img)\n",
    "    key = cv2.waitKey(1) & 0xFF\n",
    "    \n",
    "    if key == 27: # Press esc key to stop program\n",
    "        break\n",
    "    \n",
    "    if key == ord('p'): # Press p key to pause program\n",
    "        cv2.waitKey(-1)\n",
    "    \n",
    "cap.release()\n",
    "cv2.destroyAllWindows()"
   ]
  }
